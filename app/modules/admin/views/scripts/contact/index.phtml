<script type="text/javascript">
$(function() {

    $('fieldset#recipients').addClass('span3');
    $('fieldset#recipients ul.inputs-list').css('overflow-y', 'scroll').css('height', '300px');

    $('fieldset#message').addClass('span9');

    $('#textarea-content').css('height', '400px');
    $('input[type=submit]').css('margin-left', '30px');

    $('.btn-select').click(function(e) {
        var select_type = $(this).data('select');

        if (select_type == 'all') {
            $('fieldset#recipients input').prop('checked', true);
        } else if (select_type == 'stations') {
            $("fieldset#recipients input[name='stations[]'").prop('checked', true);
            $("fieldset#recipients input[name='podcasts[]'").prop('checked', false);
        } else if (select_type == 'podcasts') {
            $("fieldset#recipients input[name='stations[]'").prop('checked', false);
            $("fieldset#recipients input[name='podcasts[]'").prop('checked', true);
        } else if (select_type == 'none') {
            $('fieldset#recipients input').prop('checked', false);
        }

        e.preventDefault();
        return false;
    });

});
</script>
