    <button class="btn btn-select" data-select="all" type="button">Select All</button>
    <button class="btn btn-select" data-select="stations" type="button">Stations Only</button>
    <button class="btn btn-select" data-select="podcasts" type="button">Podcasts Only</button>
    <button class="btn btn-select" data-select="none" type="button">Select None</button>
