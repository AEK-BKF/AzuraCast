        "ip": {
          "description": "",
          "type": "string",
          "example": "127.0.0.1"
        },
        "user_agent": {
          "description": "",
          "type": "string",
          "example": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/59.0.3071.86 Safari/537.36"
        },
        "connected_on": {
          "description": "",
          "type": "integer",
          "example": 1497737400
        },
        "connected_time": {
          "description": "",
          "type": "integer",
          "example": 30
        },
        "location": {
          "description": "",
          "type": "array"
        }
      },
      "type": "object"
    },
    "NowPlaying": {
      "properties": {
