          "example": 1
        },
        "name": {
          "description": "",
          "type": "string",
          "example": "AzuraTest Radio"
        },
        "shortcode": {
          "description": "",
          "type": "string",
          "example": "azuratest_radio"
        },
        "description": {
          "description": "",
          "type": "string",
          "example": "An AzuraCast station!"
        },
        "frontend": {
          "description": "",
